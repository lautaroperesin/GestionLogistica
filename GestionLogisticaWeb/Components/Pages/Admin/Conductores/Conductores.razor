@page "/admin/conductores"
@using GestionLogisticaBackend.DTOs.Conductor
@using GestionLogisticaBackend.DTOs.Pagination
@inject NavigationManager _navigationManager
@inject IConductorService _conductorService
@inject SweetAlertService _sweetAlert
@rendermode InteractiveServer

<h1 class="text-center my-4">Gestión de Conductores</h1>
<div class="container py-4">
    @if (isLoading)
    {
        <div class="d-flex align-items-center justify-content-center my-4">
            <div class="spinner-border text-primary" role="status"></div>
            <span class="ms-2 text-primary">Cargando conductores...</span>
        </div>
    }
    else
    {
        <NavLink class="btn btn-primary" href="admin/conductores/crear">Nuevo conductor</NavLink>

        <div class="d-flex mb-3">
            <input type="text" class="form-control me-2" placeholder="Buscar por nombre" @bind="searchTerm" />
            <button class="btn btn-secondary" @onclick="Buscar">Buscar</button>
        </div>

        @if (conductores != null && conductores.TotalItems > 0)
        {
            <!-- Tabla de conductores -->
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>DNI</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Clase Licencia</th>
                        <th>Vencimiento Licencia</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var conductor in conductores.Items)
                    {
                        <tr>
                            <td>@conductor.IdConductor</td>
                            <td>@conductor.Dni</td>
                            <td>@conductor.Nombre</td>
                            <td>@conductor.Email</td>
                            <td>@conductor.Telefono</td>
                            <td>@conductor.ClaseLicencia</td>
                            <td>@conductor.VencimientoLicencia.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => Modificar(conductor)">Modificar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(conductor)">Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Paginación -->
            <nav aria-label="Paginación de conductores">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(conductores.PageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link" @onclick="() => CambiarPagina(conductores.PageNumber - 1)">Anterior</a>
                    </li>
                    @for (int i = Math.Max(1, conductores.PageNumber - 2); i <= Math.Min(conductores.TotalPages, conductores.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == conductores.PageNumber ? "active" : "")">
                            <a class="page-link" @onclick="() => CambiarPagina(i)">@i</a>
                        </li>
                    }
                    <li class="page-item @(conductores.PageNumber >= conductores.TotalPages ? "disabled" : "")">
                        <a class="page-link" @onclick="() => CambiarPagina(conductores.PageNumber + 1)">Siguiente</a>
                    </li>
                </ul>
                <p class="text-center mt-2">Página @conductores.PageNumber de @conductores.TotalPages (@conductores.TotalItems elementos)</p>
            </nav>
        }
        else
        {
            <div class="alert alert-info mt-4" role="alert">
                No hay conductores registrados.
            </div>
        }
    }
</div>

@code {
    PagedResult<ConductorDto>? conductores = new PagedResult<ConductorDto>();
    PaginationParams paginationParams = new PaginationParams
    {
        PageNumber = 1,
        PageSize = 10
    };

    bool isLoading = true;
    string searchTerm = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadConductores();
        }
    }

    private async Task LoadConductores()
    {
        try
        {
            conductores = await _conductorService.GetConductoresAsync(paginationParams);
        }
        catch (Exception ex)
        {
            // Manejar errores aquí (por ejemplo, mostrar un mensaje al usuario)
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CambiarPagina(int nuevaPagina)
    {
        if (nuevaPagina < 1 || nuevaPagina > (conductores?.TotalPages ?? 1)) return;

        isLoading = true;
        paginationParams.PageNumber = nuevaPagina;
        await LoadConductores();
    }

    private void Modificar(ConductorDto conductor)
    {
        _navigationManager.NavigateTo($"admin/conductores/editar/{conductor.IdConductor}");
    }

    private async Task Eliminar(ConductorDto conductor)
    {
        SweetAlertResult respuesta = await _sweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminando conductor",
            Text = $"¿Está seguro que desea borrar el conductor {conductor.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, quiero borrarlo!",
            CancelButtonText = "No, espera"
        });
        if (respuesta.IsConfirmed)
        {
            try
            {
                isLoading = true;
                await _conductorService.DeleteConductorAsync(conductor.IdConductor);
                await LoadConductores();
                await _sweetAlert.FireAsync("Eliminado", "El conductor ha sido eliminado exitosamente.", SweetAlertIcon.Success);
            }
            catch (Exception ex)
            {
                await _sweetAlert.FireAsync("Error", "Hubo un error al eliminar el conductor.", SweetAlertIcon.Error);
            }
            finally
            {
                isLoading = false;
            }
        }
    }

    private async Task Buscar()
    {
        paginationParams.PageNumber = 1;
        paginationParams.SearchTerm = searchTerm;
        isLoading = true;
        await LoadConductores();
    }
}
