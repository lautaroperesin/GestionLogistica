@page "/admin/ubicaciones"
@using GestionLogisticaBackend.DTOs.Ubicacion
@using GestionLogisticaBackend.DTOs.Pagination
@inject NavigationManager _navigationManager
@inject IUbicacionService _ubicacionService
@inject SweetAlertService _sweetAlert
@rendermode InteractiveServer

<h1 class="text-center my-4">Gestión de Ubicaciones</h1>
<div class="container py-4">
    @if (isLoading)
    {
        <div class="d-flex align-items-center justify-content-center my-4">
            <div class="spinner-border text-primary" role="status"></div>
            <span class="ms-2 text-primary">Cargando ubicaciones...</span>
        </div>
    }
    else
    {
        <NavLink class="btn btn-primary" href="admin/ubicaciones/crear">Nueva ubicación</NavLink>

        @if (ubicaciones != null && ubicaciones.TotalItems > 0)
        {
            <!-- Tabla de ubicaciones -->
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Dirección</th>
                        <th>Descripción</th>
                        <th>Dirección Completa</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ubicacion in ubicaciones.Items)
                    {
                        <tr>
                            <td>@ubicacion.IdUbicacion</td>
                            <td>@ubicacion.Direccion</td>
                            <td>@ubicacion.Descripcion</td>
                            <td>@ubicacion.DireccionCompleta</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => Modificar(ubicacion)">Modificar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(ubicacion)">Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Paginación -->
            <nav aria-label="Paginación de ubicaciones">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ubicaciones.PageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link" @onclick="() => CambiarPagina(ubicaciones.PageNumber - 1)">Anterior</a>
                    </li>
                    @for (int i = Math.Max(1, ubicaciones.PageNumber - 2); i <= Math.Min(ubicaciones.TotalPages, ubicaciones.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == ubicaciones.PageNumber ? "active" : "")">
                            <a class="page-link" @onclick="() => CambiarPagina(i)">@i</a>
                        </li>
                    }
                    <li class="page-item @(ubicaciones.PageNumber >= ubicaciones.TotalPages ? "disabled" : "")">
                        <a class="page-link" @onclick="() => CambiarPagina(ubicaciones.PageNumber + 1)">Siguiente</a>
                    </li>
                </ul>
                <p class="text-center mt-2">Página @ubicaciones.PageNumber de @ubicaciones.TotalPages (@ubicaciones.TotalItems elementos)</p>
            </nav>
        }
        else
        {
            <div class="alert alert-info mt-4" role="alert">
                No hay ubicaciones registradas.
            </div>
        }
    }
</div>

@code {
    PagedResult<UbicacionDto>? ubicaciones = new PagedResult<UbicacionDto>();
    PaginationParams paginationParams = new PaginationParams
    {
        PageNumber = 1,
        PageSize = 10
    };

    bool isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                ubicaciones = await _ubicacionService.GetUbicacionesAsync(paginationParams);
            }
            catch (Exception ex)
            {
                // Manejar errores aquí (por ejemplo, mostrar un mensaje al usuario)
            }
            finally
            {
                isLoading = false;
                StateHasChanged();
            }
        }
    }

    private async Task CambiarPagina(int nuevaPagina)
    {
        if (nuevaPagina < 1 || nuevaPagina > (ubicaciones?.TotalPages ?? 1)) return;

        isLoading = true;
        paginationParams.PageNumber = nuevaPagina;
        try
        {
            ubicaciones = await _ubicacionService.GetUbicacionesAsync(paginationParams);
        }
        catch (Exception ex)
        {
            // Manejar errores
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void Modificar(UbicacionDto ubicacion)
    {
        _navigationManager.NavigateTo($"admin/ubicaciones/editar/{ubicacion.IdUbicacion}");
    }

    private async Task Eliminar(UbicacionDto ubicacion)
    {
        SweetAlertResult respuesta = await _sweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminando ubicación",
            Text = $"¿Está seguro que desea borrar la ubicación {ubicacion.Direccion}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, quiero borrarla!",
            CancelButtonText = "No, espera"
        });
        if (respuesta.IsConfirmed)
        {
            try
            {
                isLoading = true;
                await _ubicacionService.DeleteUbicacionAsync(ubicacion.IdUbicacion);
                ubicaciones = await _ubicacionService.GetUbicacionesAsync(paginationParams);
                await _sweetAlert.FireAsync("Eliminada", "La ubicación ha sido eliminada exitosamente.", SweetAlertIcon.Success);
            }
            catch (Exception ex)
            {
                await _sweetAlert.FireAsync("Error", "Hubo un error al eliminar la ubicación.", SweetAlertIcon.Error);
            }
            finally
            {
                isLoading = false;
            }
        }
    }
}
