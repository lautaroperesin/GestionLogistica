@page "/admin/tiposcarga"
@using GestionLogisticaBackend.DTOs.Envio
@using Service.Interfaces
@inject NavigationManager _navigationManager
@inject IGenericApiService<TipoCargaDto> _tipoCargaService
@inject SweetAlertService _sweetAlert
@rendermode InteractiveServer

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">
                <i class="bi bi-boxes text-primary me-2"></i>
                Gestión de Tipos de Carga
            </h1>
            <p class="text-muted mb-0">Administra los diferentes tipos de carga disponibles</p>
        </div>
        <NavLink class="btn btn-primary btn-lg shadow-sm" href="admin/tiposcarga/crear">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Tipo
        </NavLink>
    </div>

    @if (isLoading)
    {
        <div class="d-flex align-items-center justify-content-center" style="min-height: 400px;">
            <div class="text-center">
                <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="text-muted">Cargando tipos de carga...</p>
            </div>
        </div>
    }
    else
    {
        @if (tiposCarga != null && tiposCarga.Any())
        {
            <!-- Estadísticas -->
            <div class="row g-3 mb-4">
                <div class="col-md-12">
                    <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-archive-fill text-primary" style="font-size: 2rem;"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="text-muted mb-1">Total Tipos de Carga</h6>
                                    <h3 class="mb-0 fw-bold">@tiposCarga.Count() tipos registrados</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Grid de tipos de carga -->
            <div class="row g-3">
                @foreach (var tipoCarga in tiposCarga)
                {
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="card shadow-sm border-0 h-100 cargo-card">
                            <div class="card-body d-flex flex-column">
                                <div class="text-center mb-3">
                                    <div class="cargo-icon mx-auto mb-3">
                                        <i class="bi bi-box-seam-fill"></i>
                                    </div>
                                    <h5 class="card-title fw-bold mb-0">@tipoCarga.Nombre</h5>
                                    <small class="text-muted">ID: @tipoCarga.IdTipoCarga</small>
                                </div>
                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-primary btn-sm" @onclick="() => Modificar(tipoCarga)">
                                            <i class="bi bi-pencil-square me-2"></i>Editar
                                        </button>
                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => Eliminar(tipoCarga)">
                                            <i class="bi bi-trash3 me-2"></i>Eliminar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Vista de tabla alternativa (opcional) -->
            <div class="mt-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 fw-semibold">
                            <i class="bi bi-table text-primary me-2"></i>
                            Vista de Tabla
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="px-4 py-3 fw-semibold">
                                            <i class="bi bi-hash me-1"></i>ID
                                        </th>
                                        <th class="py-3 fw-semibold">
                                            <i class="bi bi-box-seam me-1"></i>Nombre del Tipo
                                        </th>
                                        <th class="px-4 py-3 fw-semibold text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tipoCarga in tiposCarga)
                                    {
                                        <tr class="border-bottom">
                                            <td class="px-4 py-3">
                                                <span class="badge bg-light text-dark">@tipoCarga.IdTipoCarga</span>
                                            </td>
                                            <td class="py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="cargo-icon-small me-2">
                                                        <i class="bi bi-box-seam-fill"></i>
                                                    </div>
                                                    <span class="fw-semibold">@tipoCarga.Nombre</span>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => Modificar(tipoCarga)" title="Editar">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => Eliminar(tipoCarga)" title="Eliminar">
                                                        <i class="bi bi-trash3"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #dee2e6;"></i>
                    </div>
                    <h5 class="text-muted mb-2">No se encontraron tipos de carga</h5>
                    <p class="text-muted mb-4">No hay tipos de carga registrados en el sistema.</p>
                    <NavLink class="btn btn-primary" href="admin/tiposcarga/crear">
                        <i class="bi bi-plus-circle me-2"></i>Crear Primer Tipo
                    </NavLink>
                </div>
            </div>
        }
    }
</div>

<style>
    .cargo-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.1) 0%, rgba(96, 165, 250, 0.2) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #0d6efd;
        font-size: 2.5rem;
    }

    .cargo-icon-small {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.1) 0%, rgba(96, 165, 250, 0.1) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #0d6efd;
        font-size: 1.2rem;
    }

    .cargo-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .cargo-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
    }

    .table > :not(caption) > * > * {
        padding: 0.75rem 0.5rem;
    }

    .btn-group .btn {
        padding: 0.375rem 0.75rem;
    }

    .card {
        transition: box-shadow 0.3s ease;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }
</style>

@code {
    List<TipoCargaDto>? tiposCarga = new List<TipoCargaDto>();
    bool isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadTiposCarga();
        }
    }

    private async Task LoadTiposCarga()
    {
        try
        {
            tiposCarga = await _tipoCargaService.GetAllAsync("");
        }
        catch (Exception ex)
        {
            await _sweetAlert.FireAsync("Error", "Hubo un error al cargar los tipos de carga.", SweetAlertIcon.Error);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void Modificar(TipoCargaDto tipoCarga)
    {
        _navigationManager.NavigateTo($"admin/tiposcarga/editar/{tipoCarga.IdTipoCarga}");
    }

    private async Task Eliminar(TipoCargaDto tipoCarga)
    {
        SweetAlertResult respuesta = await _sweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "¿Eliminar tipo de carga?",
            Text = $"¿Está seguro que desea eliminar el tipo de carga '{tipoCarga.Nombre}'? Esta acción no se puede deshacer.",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, eliminar",
            CancelButtonText = "Cancelar",
            ConfirmButtonColor = "#dc3545",
            CancelButtonColor = "#6c757d"
        });
        
        if (respuesta.IsConfirmed)
        {
            try
            {
                isLoading = true;
                StateHasChanged();
                await _tipoCargaService.DeleteAsync(tipoCarga.IdTipoCarga);
                await LoadTiposCarga();
                await _sweetAlert.FireAsync("¡Eliminado!", "El tipo de carga ha sido eliminado exitosamente.", SweetAlertIcon.Success);
            }
            catch (Exception ex)
            {
                await _sweetAlert.FireAsync("Error", "Hubo un error al eliminar el tipo de carga.", SweetAlertIcon.Error);
            }
            finally
            {
                isLoading = false;
                StateHasChanged();
            }
        }
    }
}
