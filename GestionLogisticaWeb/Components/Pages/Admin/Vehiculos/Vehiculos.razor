@page "/admin/vehiculos"
@using GestionLogisticaBackend.DTOs.Vehiculo
@inject NavigationManager _navigationManager
@inject IVehiculoService _vehiculoService
@inject SweetAlertService _sweetAlert
@rendermode InteractiveServer

<h1 class="text-center my-4">Gestión de Vehículos</h1>
<div class="container py-4">
    @if (isLoading)
    {
        <div class="d-flex align-items-center justify-content-center my-4">
            <div class="spinner-border text-primary" role="status"></div>
            <span class="ms-2 text-primary">Cargando vehículos...</span>
        </div>
    }
    else
    {
        <NavLink class="btn btn-primary" href="admin/vehiculos/crear">Nuevo vehículo</NavLink>

        @if (vehiculos != null && vehiculos.Any())
        {
            <!-- Tabla de vehículos -->
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Patente</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Capacidad (Kg)</th>
                        <th>Última Inspección</th>
                        <th>Vencimiento RTO</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehiculo in vehiculos)
                    {
                        <tr>
                            <td>@vehiculo.IdVehiculo</td>
                            <td>@vehiculo.Patente</td>
                            <td>@vehiculo.Marca</td>
                            <td>@vehiculo.Modelo</td>
                            <td>@vehiculo.CapacidadCarga</td>
                            <td>@vehiculo.UltimaInspeccion.ToString("dd/MM/yyyy")</td>
                            <td>@vehiculo.RtoVencimiento.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => Modificar(vehiculo)">Modificar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(vehiculo)">Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mt-4" role="alert">
                No hay vehículos registrados.
            </div>
        }
    }
</div>

@code {
    List<VehiculoDto> vehiculos = new();
    bool isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                vehiculos = (await _vehiculoService.GetVehiculosAsync()).ToList();
            }
            catch (Exception ex)
            {
                // Manejar errores aquí (por ejemplo, mostrar un mensaje al usuario)
            }
            finally
            {
                isLoading = false;
                StateHasChanged();
            }
        }
    }

    private void Modificar(VehiculoDto vehiculo)
    {
        _navigationManager.NavigateTo($"admin/vehiculos/editar/{vehiculo.IdVehiculo}");
    }

    private async Task Eliminar(VehiculoDto vehiculo)
    {
        SweetAlertResult respuesta = await _sweetAlert.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminando vehículo",
            Text = $"¿Está seguro que desea borrar el vehículo {vehiculo.Marca} {vehiculo.Modelo} ({vehiculo.Patente})?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, quiero borrarlo!",
            CancelButtonText = "No, espera"
        });
        if (respuesta.IsConfirmed)
        {
            try
            {
                isLoading = true;
                await _vehiculoService.DeleteVehiculoAsync(vehiculo.IdVehiculo);
                vehiculos = (await _vehiculoService.GetVehiculosAsync()).ToList();
                await _sweetAlert.FireAsync("Eliminado", "El vehículo ha sido eliminado exitosamente.", SweetAlertIcon.Success);
            }
            catch (Exception ex)
            {
                await _sweetAlert.FireAsync("Error", "Hubo un error al eliminar el vehículo.", SweetAlertIcon.Error);
            }
            finally
            {
                isLoading = false;
            }
        }
    }
}
