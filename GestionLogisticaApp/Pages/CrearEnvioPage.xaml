<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GestionLogisticaApp.ViewModels"
             x:Class="GestionLogisticaApp.Pages.CrearEnvioPage"
             Title="Crear Nuevo Envio"
             BackgroundColor="#F8F9FA">

    <ContentPage.BindingContext>
        <viewModels:CrearEnvioViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <!-- Fondo decorativo superior -->
        <BoxView HeightRequest="200" VerticalOptions="Start">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0.0" />
                    <GradientStop Color="#764ba2" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Header -->
                <Frame Padding="25"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Margin="0,10,0,0">
                    <Frame.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="15" Opacity="0.1"/>
                    </Frame.Shadow>

                    <VerticalStackLayout Spacing="15">
                        <Label Text="Nuevo Envio"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#333333"
                               HorizontalOptions="Center"/>

                        <Label Text="Complete los datos del envio"
                               FontSize="14"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Numero de Seguimiento -->
                <Frame Padding="20"
                       CornerRadius="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="Auto,*">
                            <BoxView BackgroundColor="#667eea"
                                     WidthRequest="4"
                                     HeightRequest="24"
                                     CornerRadius="2"
                                     VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Numero de Seguimiento"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="#333333"
                                   Margin="12,0,0,0"/>
                        </Grid>

                        <BoxView Color="#F0F0F0" HeightRequest="1"/>

                        <HorizontalStackLayout Spacing="10">
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA"
                                   HorizontalOptions="FillAndExpand">
                                <Entry Text="{Binding NumeroSeguimiento}"
                                       Placeholder="ENV-XXXXX"
                                       BackgroundColor="Transparent"
                                       TextColor="#333333"
                                       Margin="15,0"/>
                            </Frame>

                            <Button Text="Generar"
                                    Command="{Binding GenerarNumeroSeguimientoCommand}"
                                    BackgroundColor="#667eea"
                                    TextColor="White"
                                    FontSize="14"
                                    WidthRequest="90"
                                    HeightRequest="50"
                                    CornerRadius="12"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Cliente, Conductor, Vehiculo -->
                <Frame Padding="20"
                       CornerRadius="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Grid ColumnDefinitions="Auto,*">
                            <BoxView BackgroundColor="#10B981"
                                     WidthRequest="4"
                                     HeightRequest="24"
                                     CornerRadius="2"
                                     VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Asignacion"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#333333"
                                   Margin="12,0,0,0"/>
                        </Grid>

                        <BoxView Color="#F0F0F0" HeightRequest="1"/>

                        <!-- Cliente -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Cliente *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Picker ItemsSource="{Binding Clientes}"
                                        SelectedItem="{Binding SelectedCliente}"
                                        ItemDisplayBinding="{Binding Nombre}"
                                        BackgroundColor="Transparent"
                                        TextColor="#333333"
                                        Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Conductor -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Conductor *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Picker ItemsSource="{Binding Conductores}"
                                        SelectedItem="{Binding SelectedConductor}"
                                        ItemDisplayBinding="{Binding Nombre}"
                                        BackgroundColor="Transparent"
                                        TextColor="#333333"
                                        Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Vehiculo -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Vehiculo *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Picker ItemsSource="{Binding Vehiculos}"
                                        SelectedItem="{Binding SelectedVehiculo}"
                                        ItemDisplayBinding="{Binding Patente}"
                                        BackgroundColor="Transparent"
                                        TextColor="#333333"
                                        Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Ubicaciones -->
                <Frame Padding="20"
                       CornerRadius="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Grid ColumnDefinitions="Auto,*">
                            <BoxView BackgroundColor="#3B82F6"
                                     WidthRequest="4"
                                     HeightRequest="24"
                                     CornerRadius="2"
                                     VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Ruta"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#333333"
                                   Margin="12,0,0,0"/>
                        </Grid>

                        <BoxView Color="#F0F0F0" HeightRequest="1"/>

                        <!-- Origen -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Origen *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Picker ItemsSource="{Binding Ubicaciones}"
                                        SelectedItem="{Binding SelectedOrigen}"
                                        ItemDisplayBinding="{Binding DireccionCompleta}"
                                        BackgroundColor="Transparent"
                                        TextColor="#333333"
                                        Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Destino -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Destino *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Picker ItemsSource="{Binding Ubicaciones}"
                                        SelectedItem="{Binding SelectedDestino}"
                                        ItemDisplayBinding="{Binding DireccionCompleta}"
                                        BackgroundColor="Transparent"
                                        TextColor="#333333"
                                        Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Detalles del Envio -->
                <Frame Padding="20"
                       CornerRadius="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Grid ColumnDefinitions="Auto,*">
                            <BoxView BackgroundColor="#F59E0B"
                                     WidthRequest="4"
                                     HeightRequest="24"
                                     CornerRadius="2"
                                     VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Detalles de la Carga"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#333333"
                                   Margin="12,0,0,0"/>
                        </Grid>

                        <BoxView Color="#F0F0F0" HeightRequest="1"/>

                        <!-- Fecha de Salida -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Fecha de Salida *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <DatePicker Date="{Binding FechaSalida}"
                                            BackgroundColor="Transparent"
                                            TextColor="#333333"
                                            Margin="15,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Tipo de Carga -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Tipo de Carga *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Picker ItemsSource="{Binding TiposCarga}"
                                        SelectedItem="{Binding SelectedTipoCarga}"
                                        ItemDisplayBinding="{Binding Nombre}"
                                        BackgroundColor="Transparent"
                                        TextColor="#333333"
                                        Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Peso y Volumen -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <VerticalStackLayout Grid.Column="0" Spacing="8">
                                <Label Text="Peso (Kg) *"
                                       FontSize="14"
                                       TextColor="#666666"
                                       FontAttributes="Bold"/>
                                <Frame Padding="0"
                                       CornerRadius="12"
                                       BorderColor="#E0E0E0"
                                       HasShadow="False"
                                       BackgroundColor="#F8F9FA">
                                    <Entry Text="{Binding PesoKg}"
                                           Keyboard="Numeric"
                                           Placeholder="0.00"
                                           BackgroundColor="Transparent"
                                           TextColor="#333333"
                                           Margin="15,0"/>
                                </Frame>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label Text="Volumen (M3) *"
                                       FontSize="14"
                                       TextColor="#666666"
                                       FontAttributes="Bold"/>
                                <Frame Padding="0"
                                       CornerRadius="12"
                                       BorderColor="#E0E0E0"
                                       HasShadow="False"
                                       BackgroundColor="#F8F9FA">
                                    <Entry Text="{Binding VolumenM3}"
                                           Keyboard="Numeric"
                                           Placeholder="0.00"
                                           BackgroundColor="Transparent"
                                           TextColor="#333333"
                                           Margin="15,0"/>
                                </Frame>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Costo Total -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Costo Total ($) *"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Entry Text="{Binding CostoTotal}"
                                       Keyboard="Numeric"
                                       Placeholder="0.00"
                                       BackgroundColor="Transparent"
                                       TextColor="#333333"
                                       Margin="15,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Descripcion -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Descripcion"
                                   FontSize="14"
                                   TextColor="#666666"
                                   FontAttributes="Bold"/>
                            <Frame Padding="0"
                                   CornerRadius="12"
                                   BorderColor="#E0E0E0"
                                   HasShadow="False"
                                   BackgroundColor="#F8F9FA">
                                <Editor Text="{Binding Descripcion}"
                                        Placeholder="Descripcion opcional del envio..."
                                        AutoSize="TextChanges"
                                        MinimumHeightRequest="80"
                                        BackgroundColor="Transparent"
                                        TextColor="#333333"
                                        Margin="15,10"/>
                            </Frame>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Mensaje -->
                <Label Text="{Binding Message}"
                       TextColor="{Binding IsMessageError, Converter={StaticResource BoolToColorConverter}}"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Message, Converter={StaticResource StringNotEmptyConverter}}"/>

                <!-- Botones -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="CANCELAR"
                            Command="{Binding CancelarCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#EF4444"
                            BorderColor="#EF4444"
                            BorderWidth="2"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"/>

                    <Button Grid.Column="1"
                            Text="CREAR ENVIO"
                            Command="{Binding CrearEnvioCommand}"
                            BackgroundColor="#667eea"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50">
                        <Button.Shadow>
                            <Shadow Brush="#667eea" Offset="0,4" Radius="8" Opacity="0.3"/>
                        </Button.Shadow>
                    </Button>
                </Grid>

                <!-- Espacio inferior -->
                <BoxView HeightRequest="20" BackgroundColor="Transparent"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Overlay de carga -->
        <Grid IsVisible="{Binding IsBusy}"
              BackgroundColor="#80000000"
              VerticalOptions="Fill"
              HorizontalOptions="Fill">
            <Frame CornerRadius="20"
                   BackgroundColor="White"
                   Padding="40"
                   WidthRequest="270"
                   HeightRequest="270"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="True">
                <VerticalStackLayout Spacing="20"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center">
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       Color="#667eea"
                                       WidthRequest="60"
                                       HeightRequest="50"
                                       HorizontalOptions="Center"/>
                    <Label Text="Creando envio..."
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center"/>
                    <Label Text="Por favor espera"
                           FontSize="14"
                           TextColor="#666666"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
